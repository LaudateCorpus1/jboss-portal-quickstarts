<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <profiles>

    <!--
      This is the harder way. Use it if you cannot use settings-hosted-repo.xml for some reason.

      Setup with zipped repositories downloaded from

      https://access.redhat.com/ Downloads > JBoss Enterprise Middleware

      See the sibling README file for more information.
    -->
    <profile>
      <id>jboss-local-repositories</id>
      <repositories>
        <repository>
          <id>jpp</id>
          <!-- Change this to where you have unpacked the zipped JPP 6.1.0 Maven repository -->
          <url>file:///path/to/repo/jboss-jpp-6.1.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>wfk230</id>
          <!-- Change this to where you have unpacked the zipped Web Framework Kit 2.3.0 Maven repository -->
          <url>file:///path/to/repo/jboss-wfk-2.3.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>wfk220</id>
          <!-- Change this to where you have unpacked the zipped Web Framework Kit 2.2.0 Maven repository -->
          <url>file:///path/to/repo/jboss-wfk-2.2.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>wfk210</id>
          <!-- Change this to where you have unpacked the zipped Web Framework Kit 2.1.0 Maven repository -->
          <url>file:///path/to/repo/jboss-wfk-2.1.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>wfk200</id>
          <!-- Change this to where you have unpacked the zipped Web Framework Kit 2.0.0 Maven repository -->
          <url>file:///path/to/repo/jboss-wfk-2.0.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>eap610</id>
          <!-- Change this to where you have unpacked the zipped Application Platform 6.1.0 Maven repository -->
          <url>file:///path/to/repo/jboss-eap-6.1.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
