<?xml version="1.0" encoding="UTF-8"?>

<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <profiles>

    <!--
      This is the harder way. Use it if you cannot use settings-hosted-repo.xml for some reason.

      Setup with zipped repositories downloaded from 
      
        https://access.redhat.com/ Downloads > JBoss Enterprise Middleware
        
      See the sibling README file for more information. 
    -->
    <profile>
      <id>jboss-local-repositories</id>
      <repositories>
        <repository>
          <id>jpp</id>
          <!-- Change this to where you have unpacked the zipped JPP Maven repository -->
          <url>file:///path/to/repo/jpp-6.0.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>wfk</id>
          <!-- Change this to where you have unpacked the zipped Web Framework Kit Maven repository -->
          <url>file:///path/to/repo/jboss-wfk-2.1.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>eap</id>
          <!-- Change this to where you have unpacked the zipped Application Platform Maven repository -->
          <url>file:///path/to/repo/jboss-eap-6.0.1-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
      
      
      <pluginRepositories>
        <pluginRepository>
          <id>jpp-plugins</id>
          <!-- Change this to where you have unpacked the zipped JPP Maven repository -->
          <url>file:///path/to/repo/jpp-6.0.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>wfk-plugins</id>
          <!-- Change this to where you have unpacked the zipped Web Framework Kit Maven repository -->
          <url>file:///path/to/repo/jboss-wfk-2.1.0-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>eap-plugins</id>
          <!-- Change this to where you have unpacked the zipped Application Platform Maven repository -->
          <url>file:///path/to/repo/jboss-eap-6.0.1-maven-repository</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>

  </profiles>

  <activeProfiles>
    <!-- Make the repositories active by default -->
    <activeProfile>jboss-local-repositories</activeProfile>
  </activeProfiles>

</settings>
