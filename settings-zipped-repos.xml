          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>

  </profiles>

  <activeProfiles>
    <!-- Make the repositories active by default -->
    <activeProfile>jboss-local-repositories</activeProfile>
  </activeProfiles>

</settings>
