            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>


      <pluginRepositories>
        <pluginRepository>
          <id>jpp-plugins</id>
          <!-- Change this to where you have unpacked the zipped JPP Maven repository -->
          <url>file:///path/to/repo/jboss-jpp-6.1.0-maven-repository</url>
