<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.gatein.portal.quickstarts</groupId>
    <artifactId>gatein-portal-quickstarts-parent</artifactId>
    <version>3.5.0.Final-redhat-1</version>
    <packaging>pom</packaging>
    <name>JPP Quickstarts Parent</name>
    <url>http://gatein.org</url>
    <scm>
        <url>https://github.com/gatein/gatein-portal-quickstart</url>
    </scm>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <distribution>repo</distribution>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>

    <properties>
        <org.jboss.ide.target.version>4.0</org.jboss.ide.target.version>
        <org.jboss.bom.gatein-bom.version>1.0.0.Final-redhat-1</org.jboss.bom.gatein-bom.version>
        <!-- descriptor.suffix history:
             JBT 4.0.0.Alpha1 - <empty>
             JBT 4.0.0.Alpha2 - '-001'
             JBT 4.0.0.Beta1 - '-002'
        -->
        <org.gatein.portal.quickstarts.descriptor.suffix>-002</org.gatein.portal.quickstarts.descriptor.suffix>
        <compatibility.target.productVersionMajor>6</compatibility.target.productVersionMajor>
        <compatibility.target.productVersionMinor>0</compatibility.target.productVersionMinor>
        <compatibility.target.productVersion>${compatibility.target.productVersionMajor}.${compatibility.target.productVersionMinor}</compatibility.target.productVersion>
        <compatibility.target.product>JBoss Portal Platform (JPP)</compatibility.target.product>
        <compatibility.target.productAndVersion>${compatibility.target.product} ${compatibility.target.productVersion}</compatibility.target.productAndVersion>

        <compatibility.as.major.version>6</compatibility.as.major.version>
        <compatibility.as.minor.version>0</compatibility.as.minor.version>
        <compatibility.as.version>${compatibility.as.major.version}.${compatibility.as.minor.version}</compatibility.as.version>
        <compatibility.as.product>JBoss Application Platform</compatibility.as.product>
        <compatibility.as.productAndVersion>${compatibility.as.product} ${compatibility.as.version}</compatibility.as.productAndVersion>

        <gatein-bom.pbr.version>${version.org.jboss.portletbridge}</gatein-bom.pbr.version>

        <maven.antrun.plugin.version>1.7</maven.antrun.plugin.version>
        <github.global.server>github</github.global.server>
        <downloads.maven.plugin.version>0.5</downloads.maven.plugin.version>
        <com.google.code.maven-replacer-plugin>1.5.0</com.google.code.maven-replacer-plugin>
        <org.codehaus.gmaven.version>1.4</org.codehaus.gmaven.version>
        <org.freemarker.version>2.3.19</org.freemarker.version>
        <aether.version>1.13.1</aether.version>
        <maven.replacer.plugin.version>1.5.1</maven.replacer.plugin.version>

        <!-- External links used in READMEs -->
        <gatein.user.forum.label>Online User Group</gatein.user.forum.label>
        <!-- https://community.jboss.org/en/gatein?view=discussions -->
        <gatein.user.forum.url>https://access.redhat.com/groups/jboss-enterprise-middleware</gatein.user.forum.url>

		<!-- https://docs.jboss.org/author/display -->
        <jboss.confluence.root.url>http://documentation-devel.engineering.redhat.com/docs/en-US</jboss.confluence.root.url>
		<!-- ${jboss.confluence.root.url}/GTNPORTAL${compatibility.target.productVersionMajor}${compatibility.target.productVersionMinor} -->
        <gatein.docs.url>${jboss.confluence.root.url}/JBoss_Portal_Platform/${compatibility.target.productVersionMajor}/html</gatein.docs.url>
        <!-- ${gatein.docs.url}/Developer+Guide -->
        <gatein.devguide.url>${gatein.docs.url}/Developer_Guide</gatein.devguide.url>
        <!-- GDG-Portal+Containers+and+Extensions -->
        <gatein.devguide.containers.extensions.url>${gatein.docs.url}/Developer_Guide/sid-8094155.html</gatein.devguide.containers.extensions.url>
        <!-- /Custom+Groovy+Template+for+a+Portlet -->
        <gatein.devguide.custom.groovy.template.url>${gatein.docs.url}/Developer_Guide/sid-8094155.html#Custom_Groovy_Template_For_Portlet</gatein.devguide.custom.groovy.template.url>
        <!-- /Custom+Skin+for+a+Portlet -->
        <gatein.devguide.custom.portlet.skin.url>${gatein.docs.url}/Developer_Guide/sid-8094155.html#Custom_Skin_For_Portlet</gatein.devguide.custom.portlet.skin.url>
        <!-- /Custom+Navigation+and+Pages -->
        <gatein.devguide.nav.pages.url>${gatein.docs.url}/Developer_Guide/sid-8094155.html#Custom_Navigation_And_Pages</gatein.devguide.nav.pages.url>
        <!-- /Custom+Internationalization+Resource+Bundles -->
        <gatein.devguide.i18n.url>${gatein.docs.url}/Developer_Guide/sid-8094155.html#Custom_Internationalization_Resource_Bundles</gatein.devguide.i18n.url>

		<!-- Starting+a+Portlet+Project -->
        <gatein.devguide.starting.portlet.project.url>${gatein.docs.url}/Developer_Guide/sid-819805.html</gatein.devguide.starting.portlet.project.url>
        <!-- /Standard+Portlet+Development+%28JSR-286%29 -->
        <gatein.devguide.jsf.plain.jsr268.portlet.url>${gatein.docs.url}/Developer_Guide/sid-55477012.html</gatein.devguide.jsf.plain.jsr268.portlet.url>
        <!-- /JSF2+Portlet+Development -->
        <gatein.devguide.jsf.portlets.url>${gatein.docs.url}/Developer_Guide/sid-55477014.html</gatein.devguide.jsf.portlets.url>
        <!-- /Basic+JSF+Portlet+Development -->
        <gatein.devguide.jsf.basic.portlet.url>${gatein.docs.url}/Developer_Guide/sid-55477014.html#sid-55477016</gatein.devguide.jsf.basic.portlet.url>
        <!-- /JSF+portlet+development+with+RichFaces -->
        <gatein.devguide.jsf.rf.portlet.url>${gatein.docs.url}/Developer_Guide/sid-55477018.html</gatein.devguide.jsf.rf.portlet.url>
		<!-- TODO: portlet primer also in the prod docs? -->
        <gatein.refguide.portlet.primer.url>https://docs.jboss.org/author/pages/viewpage.action?pageId=54264602</gatein.refguide.portlet.primer.url>
		<!-- /AS${compatibility.as.major.version}${compatibility.as.minor.version}/Admin+Guide -->
        <jboss.admin.guide.url>${jboss.confluence.root.url}/${compatibility.as.major.version}/html/Administration_and_Configuration_Guide</jboss.admin.guide.url>
        <!-- #AdminGuide-Datasources -->
        <jboss.admin.guide.ds.url>${jboss.admin.guide.url}/chap-Datasource_Management.html</jboss.admin.guide.ds.url>
        <!-- #AdminGuide-Deploymentof%5Cds.xmlfiles -->
        <jboss.admin.guide.ds.files.url>${jboss.admin.guide.url}/chap-Datasource_Management.html#Deployment_of_-ds.xml_files</jboss.admin.guide.ds.files.url>

    </properties>

    <modules>
        <module>simplest-hello-world-portlet</module>
        <module>jsf2-hello-world-portlet</module>
        <module>jsf2-rf4-hello-world-portlet</module>
        <module>gatein-portal-extension</module>
        <module>gatein-sample-portal</module>
    </modules>

    <dependencies>
      <dependency>
        <groupId>org.jboss.bom</groupId>
        <artifactId>gatein-3.5-bom</artifactId>
        <version>${org.jboss.bom.gatein-bom.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>reset-bom-version</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <version>${maven.replacer.plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <includes>
                                <include>*/pom.xml</include>
                            </includes>
                            <replacements>
                                <replacement>
                                    <token>&lt;org.jboss.bom.gatein-bom.version>[^&lt;]*&lt;/org.jboss.bom.gatein-bom.version></token>
                                    <value>&lt;org.jboss.bom.gatein-bom.version>${org.jboss.bom.gatein-bom.version}&lt;/org.jboss.bom.gatein-bom.version></value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>generate-readmes</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.gmaven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <version>${org.codehaus.gmaven.version}</version>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <classpath>
                                        <element>
                                            <groupId>org.freemarker</groupId>
                                            <artifactId>freemarker</artifactId>
                                            <version>${org.freemarker.version}</version>
                                        </element>
                                        <element>
                                            <artifactId>maven-model</artifactId>
                                            <groupId>org.apache.maven</groupId>
                                            <version>${maven.version}</version>
                                        </element>
                                        <element>
                                            <groupId>org.sonatype.aether</groupId>
                                            <artifactId>aether-api</artifactId>
                                            <version>${aether.version}</version>
                                        </element>
                                        <element>
                                            <groupId>org.sonatype.aether</groupId>
                                            <artifactId>aether-util</artifactId>
                                            <version>${aether.version}</version>
                                        </element>
                                    </classpath>
                                    <source>${project.basedir}/src/build/groovy/FreeMarkerMerger.groovy</source>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>prepare-zips</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.gmaven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <version>${org.codehaus.gmaven.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <classpath>
                                        <element>
                                            <artifactId>maven-model</artifactId>
                                            <groupId>org.apache.maven</groupId>
                                            <version>${maven.version}</version>
                                        </element>
                                    </classpath>
                                    <source>${project.basedir}/src/build/groovy/Packager.groovy</source>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>publish-zips</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.gmaven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <version>${org.codehaus.gmaven.version}</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <classpath>
                                        <element>
                                            <artifactId>maven-model</artifactId>
                                            <groupId>org.apache.maven</groupId>
                                            <version>${maven.version}</version>
                                        </element>
                                    </classpath>
                                    <source>${project.basedir}/src/build/groovy/Packager.groovy</source>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.github.github</groupId>
                        <artifactId>downloads-maven-plugin</artifactId>
                        <version>${downloads.maven.plugin.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                                <phase>install</phase>
                                <configuration>
                                    <description>${project.version} release of ${project.name}</description>
                                    <override>true</override>
                                    <includes>
                                        <include>assembly/*</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
</project>
